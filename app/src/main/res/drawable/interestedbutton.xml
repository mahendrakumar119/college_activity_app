<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <gradient android:angle="-90" android:startColor="#724AA0" android:endColor="#724AA0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <solid android:color="#724AA0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
            <gradient android:angle="-90" android:startColor="#392073" android:endColor="#392073" />
        </shape>
    </item>
</selector>